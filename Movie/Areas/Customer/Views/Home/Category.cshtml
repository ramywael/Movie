@model IEnumerable<Category>

@{
    ViewData["Title"] = "Movie Categories";
}

<div class="container mt-5">
    <h2 class="text-center text-white mb-4">Movie Categories</h2>

    <table class="table table-dark table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                        <a href="/Customer/Home/AllMovies?Id=@category.Id" class="btn btn-primary btn-sm">View Movies</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
