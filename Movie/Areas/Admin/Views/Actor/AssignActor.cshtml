@{
    ViewData["Title"] = "Assign Actors";
}

<h2 class="text-center mb-4">Assign Actors to <span class="text-primary">@ViewBag.Movie.Name</span></h2>

<form asp-action="AssignActor" method="post" class="shadow-lg p-4 bg-white rounded">
    <input type="hidden" name="movieId" value="@ViewBag.Movie.Id" />

    <div class="mb-3">
        <label class="fw-bold fs-5">Select Actors:</label>
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
            @foreach (var actor in Model)
            {
                <div class="col">
                    <div class="card text-center border-0 shadow-sm p-2 position-relative actor-card">
                        <img src="~/Images/cast/@actor.ProfilePicture" alt="ProfilePicture" class="card-img-top rounded-circle mx-auto d-block" style="width: 70px; height: 70px; object-fit: cover;">
                        <div class="card-body p-2">
                            <h6 class="card-title text-dark">@actor.FirstName @actor.LastName</h6>
                        </div>
                        <div class="form-check position-absolute top-0 end-0 p-2">
                            <input type="checkbox" name="actorsId" value="@actor.Id" class="form-check-input actor-checkbox">
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary px-4">Save Selection</button>
    </div>
</form>

<!-- Custom CSS for Better Styling -->
<style>
    .actor-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .actor-card:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

    .actor-checkbox {
        transform: scale(1.3);
    }

    .actor-card .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>
